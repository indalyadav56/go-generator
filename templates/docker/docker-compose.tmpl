{{define "compose"}}
version: '3.8'

services:
  postgres_db:
    image: postgres:latest
    restart: always
    container_name: {{.ProjectTitle}}_postgres
    ports:
      - "5433:5432"
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis:
    image: redis:latest
    container_name: {{.ProjectTitle}}_redis
    ports:
      - "6371:6379"
    volumes:
      - redis_data:/data

volumes:
  postgres_data:
  redis_data:

{{end}}